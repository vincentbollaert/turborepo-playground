{
  "name": "@repo/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    "./index.css": "./dist/output.css",
    "./avatar": {
      "types": "./dist/avatar/Avatar.d.ts",
      "import": "./dist/avatar/Avatar.mjs",
      "require": "./dist/avatar/Avatar.js"
    },
    "./profileCard": {
      "types": "./dist/profileCard/ProfileCard.d.ts",
      "import": "./dist/profileCard/ProfileCard.mjs",
      "require": "./dist/profileCard/ProfileCard.js"
    }
  },
  "scripts": {
    "build": "tsup && bunx @tailwindcss/cli -i ./src/index.css -o ./dist/output.css",
    "dev": "tsup && bunx @tailwindcss/cli -i ./src/index.css -o ./dist/output.css --watch",
    "lint": "eslint src --max-warnings 0",
    "check-types": "tsc --noEmit",
    "generate:component": "turbo gen component",
    "sync-package-exports": "node scripts/sync-package-exports.cjs"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@turbo/gen": "^2.4.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.13.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "eslint": "^9.20.0",
    "glob": "^11.0.1",
    "postcss": "^8.5.2",
    "tailwindcss": "^4.0.6",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.3",
    "@tailwindcss/cli": "^4.0.6",
    "@tailwindcss/postcss": "^4.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.475.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7"
  }
}
