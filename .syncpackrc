{
  "source": [
    "package.json",
    "packages/*/package.json",
    "apps/*/package.json"
  ],
  "versionGroups": [
    {
      "label": "Enforce same version for all packages",
      "packages": [
        "**"
      ],
      "dependencies": [
        "**"
      ],
      "dependencyTypes": [
        "dependencies",
        "devDependencies",
        "peerDependencies"
      ],
      "pinVersion": "2.2.2"
    },
    {
      "label": "Skip local packages",
      "dependencies": [
        "@repo/*"
      ],
      "dependencyTypes": [
        "dependencies",
        "devDependencies",
        "peerDependencies"
      ],
      "pinVersion": "workspace:*"
    }
  ]
}
